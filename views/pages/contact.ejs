<!-- ***** Contact Area Start ***** -->
<section class="poca-contact-area mt-50 mb-100">
  <div class="container">
    

    <div class="row">
      <!-- Contact Information -->
      <div class="col-12 col-md-6">
        <div class="contact-information">
          <div class="contact-heading mb-50">
            <h2>Contact Us</h2>
            <h6>We will be happy to assist you with any question</h6>
            
          </div>


        </div>
      </div>

      <!-- Contact Form -->
      <div class="col-12 col-md-6">
        <div class="contact-form">
          <div class="contact-heading">
            <h2>Get In Touch</h2>
            <h5>Don't hesitate to contact us</h5>
          </div>
          <!-- Form -->
          <form action="/contact" method="POST" id="query-form">
            <div class="row">
              <div class="col-12">
                <input type="text" name="name" class="form-control mb-30" placeholder="Your Name" required>
              </div>
              <div class="col-12">
                <input type="email" name="email" class="form-control mb-30" placeholder="Your Email" required>
              </div>
              <div class="col-12">
                <textarea name="message" class="form-control mb-30" placeholder="Your Message" required></textarea>
              </div>
              <div class="col-12">
                <button type="submit" class="btn poca-btn send-button">Send</button>
              </div>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</section>
<!-- ***** Contact Area End ***** -->



